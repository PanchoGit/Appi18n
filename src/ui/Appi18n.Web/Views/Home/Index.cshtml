@{
    ViewBag.Title = "Index";
}

<h1 class="title">Skate</h1>

<div id="app" align="center">
    <div id="edit" class="app scale2" style="display: none; -ms-opacity: 0; opacity: 0;">
        <h2>Note Edit</h2>
        <div class="container-fluid" style="height: 70%">
            <form class="form-horizontal" style="height: 70%">
                <div class="form-group">
                    <label for="inputName" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10" align="left">
                        <input type="text" id="inputName" placeholder="Name" style="width: 100%" v-model="noteEditModel.name">
                    </div>
                </div>
                <div class="form-group" style="height: 100%">
                    <label for="inputText" class="col-sm-2 control-label">Text</label>
                    <div class="col-sm-10" align="left" style="height: 100%">
                        <textarea id="inputText" placeholder="Text" style="width: 100%; height: 100%" v-model="noteEditModel.text"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate" class="col-sm-2 control-label">Date</label>
                    <div class="col-sm-4" align="left">
                        <input type="text" id="inputDate" placeholder="Date" v-model="noteEditModel.date" style="width: 100%" />
                    </div>
                    <div class="col-sm-2">Time Offset Hours: {{timeZoneOffset}}</div>
                </div>
            </form>
        </div>
        <div style="position: absolute; width: 100%; bottom: 10px">
            <button class="button" v-on:click="saveNote">Save</button>
            <button class="button" v-on:click="goHomeClick">Cancel</button>
        </div>
    </div>
    <div id="home" class="app scale2" style="display: none; -ms-opacity: 0; opacity: 0;">

        <div style="width: 100%; margin-top: 20px; padding-left: 20px;" align="left">
            <button class="button" style="left: 10px; top: 10px" v-on:click="startClick" v-bind:disabled="!rowSelected">Edit</button>
        </div>
        <table id="grid-selection" class="table table-condensed table-hover table-striped" style="width: 95%; margin-top: 20px;">
            <thead>
            <tr>
                <th data-column-id="id" data-type="numeric" data-identifier="true" data-width="60px">Id</th>
                <th data-column-id="name" data-width="200px">Name</th>
                <th data-column-id="text">Text</th>
                <th data-column-id="date" data-sortable="true" data-width="200px">Date</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

<script src="~/dist/app/app.js"></script>
<script src="~/dist/lib/common.js"></script>
