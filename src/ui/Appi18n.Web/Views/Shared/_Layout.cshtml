<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/dist/lib/jquery-1.8.2.js"></script>
    <script src="~/dist/lib/moment-with-locales.js"></script>
    <script src="~/dist/lib/plugins/CSSPlugin.min.js"></script>
    <script src="~/dist/lib/easing/EasePack.min.js"></script>
    <script src="~/dist/lib/TweenLite.min.js"></script>

    <script type="text/javascript" src="~/dist/lib/bootstrap-datetimepicker/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="~/dist/lib/bootstrap-datetimepicker/bootstrap-datetimepicker.min.css" />

    <script src="~/dist/lib/jquery.bootgrid-1.3.1/jquery.bootgrid.min.js"></script>
